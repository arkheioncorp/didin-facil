  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "video/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+didin",
      "url": "/protocol?url=%s"
    }
  ],
  "related_applications": [
    {
      "platform": "windows",
      "url": "https://github.com/arkheioncorp/didin-facil/releases"
