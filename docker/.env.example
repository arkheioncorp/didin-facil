# ===========================================
# TikTrend Finder - Environment Variables
# ===========================================

# Application
ENVIRONMENT=production
DEBUG=false

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=tiktrend
DB_USER=tiktrend
DB_PASSWORD=change_me_in_production

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_me_in_production

# JWT Authentication
# Generate with: openssl rand -hex 32
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Mercado Pago
MP_ACCESS_TOKEN=your_mercado_pago_access_token
MP_PUBLIC_KEY=your_mercado_pago_public_key
MP_WEBHOOK_SECRET=your_webhook_secret
MP_SANDBOX=false

# Scraper Settings
SCRAPER_HEADLESS=true
SCRAPER_MAX_BROWSERS=3
SCRAPER_MIN_DELAY=2.0
SCRAPER_MAX_DELAY=5.0
SCRAPER_USE_PROXIES=false

# Storage
STORAGE_PROVIDER=local
CDN_URL=https://cdn.yourdomain.com

# API Settings
API_PORT=8000
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Development tools (only for dev profile)
PGADMIN_EMAIL=admin@tiktrend.local
PGADMIN_PASSWORD=admin

# Analytics
POSTHOG_API_KEY=phc_your_posthog_key_here

# Scraper Safety Switch
SAFETY_SWITCH_ENABLED=true
MAX_DETECTION_RATE=0.2
SAFETY_COOLDOWN=3600
CONSECUTIVE_FAILURES_THRESHOLD=5

# ===========================================
# WhatsApp (Evolution API)
# ===========================================
EVOLUTION_API_KEY=429683C4C977415CAAFCCE10F7D57E11

# ===========================================
# Customer Support (Chatwoot)
# ===========================================
# Generate with: openssl rand -hex 32
CHATWOOT_SECRET_KEY=your_chatwoot_secret_key_here
CHATWOOT_ACCESS_TOKEN=your_chatwoot_api_access_token

# ===========================================
# Alertas e Observabilidade
# ===========================================
# Slack Webhook URL (opcional)
# Obter em: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# Discord Webhook URL (opcional)
# Obter em: Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=

# Webhook gen√©rico para alertas (opcional)
ALERTS_WEBHOOK_URL=

# Grafana password
GRAFANA_PASSWORD=admin
