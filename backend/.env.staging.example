# ============================================================================
# TikTrend Finder - Environment Variables (Staging)
# ============================================================================
# Copie este arquivo para .env e configure os valores
# ============================================================================

# ============================================================================
# Application
# ============================================================================
ENVIRONMENT=staging
DEBUG=false

# ============================================================================
# Database
# ============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host:5432/tiktrend_staging

# ============================================================================
# Redis
# ============================================================================
REDIS_URL=redis://host:6379/0

# ============================================================================
# Security
# ============================================================================
# IMPORTANTE: Gere uma chave única para produção
# Use: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your-secure-jwt-secret-key-change-this

# ============================================================================
# OpenAI
# ============================================================================
OPENAI_API_KEY=sk-your-openai-key

# ============================================================================
# MercadoPago
# ============================================================================
MERCADO_PAGO_ACCESS_TOKEN=your-mercadopago-token
MERCADOPAGO_PUBLIC_KEY=your-public-key
MERCADOPAGO_WEBHOOK_SECRET=your-webhook-secret

# ============================================================================
# Evolution API (WhatsApp)
# ============================================================================
EVOLUTION_API_URL=https://evolution.yourdomain.com
EVOLUTION_API_KEY=your-evolution-api-key

# ============================================================================
# Chatwoot (Customer Support)
# ============================================================================
CHATWOOT_API_URL=https://app.chatwoot.com
CHATWOOT_ACCESS_TOKEN=your-chatwoot-token
CHATWOOT_ACCOUNT_ID=1

# ============================================================================
# n8n Integration
# ============================================================================
N8N_API_URL=https://n8n.yourdomain.com
N8N_API_KEY=your-n8n-api-key

# ============================================================================
# Typebot Integration
# ============================================================================
TYPEBOT_API_URL=https://typebot.yourdomain.com
TYPEBOT_PUBLIC_ID=your-bot-id

# ============================================================================
# Social Media OAuth
# ============================================================================
# Instagram
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# TikTok
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# Google/YouTube
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================================================
# CDN / Storage (Cloudflare R2)
# ============================================================================
CDN_URL=https://cdn.tiktrend.com.br
R2_BUCKET_NAME=tiktrend-staging
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_ENDPOINT=https://account-id.r2.cloudflarestorage.com

# ============================================================================
# Monitoring
# ============================================================================
SENTRY_DSN=https://xxx@sentry.io/xxx
POSTHOG_API_KEY=phc_xxx

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=https://staging.tiktrend.com.br,https://app.tiktrend.com.br
FRONTEND_URL=https://staging.tiktrend.com.br
API_URL=https://api.tiktrend.com.br

# ============================================================================
# Scraper
# ============================================================================
PROXY_POOL_URL=http://proxy-pool:8080
SCRAPER_RATE_LIMIT=3
SCRAPER_RETRY_COUNT=5
