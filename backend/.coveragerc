# Coverage.py configuration for TikTrend Finder Backend
# Target: 90%+ coverage across all modules

[run]
# Measure branch coverage
branch = True

# Source directories to measure
source = 
    api
    shared

# Files/directories to omit
omit = 
    */tests/*
    */__pycache__/*
    */.venv/*
    */venv/*
    */migrations/*
    */conftest.py
    */setup.py

# Enable parallel processing
parallel = True

# Data file location
data_file = .coverage

[report]
# Regex patterns for lines to exclude
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover
    
    # Don't complain about missing debug-only code
    def __repr__
    if self\.debug
    
    # Don't complain if tests don't hit defensive assertions
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run
    if 0:
    if __name__ == .__main__.:
    
    # Don't complain about abstract methods
    @abstractmethod
    
    # Don't complain about typing overloads
    @overload
    
    # Don't complain about pass statements
    pass
    
    # Don't complain about ellipsis
    \.\.\.

# Fail under this percentage
fail_under = 90

# Show missing lines
show_missing = True

# Precision for coverage percentage
precision = 2

# Skip covered files in terminal output
skip_covered = False

# Skip empty files
skip_empty = True

[html]
# Directory for HTML report
directory = htmlcov

# Title for HTML report
title = TikTrend Finder - Backend Coverage Report

# Extra CSS for HTML report
# extra_css = coverage_custom.css

[xml]
# Output file for XML report (for CI/CD)
output = coverage.xml

[json]
# Output file for JSON report
output = coverage.json

# Pretty print JSON
pretty_print = True

# Show line and branch coverage in JSON
show_contexts = True
