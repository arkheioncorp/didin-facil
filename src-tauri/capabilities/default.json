{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "desktop-default",
  "description": "Base capability granting only the plugins and scopes required by TikTrend Finder.",
  "platforms": [
    "linux",
    "macOS",
    "windows"
  ],
  "windows": [
    "*"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "shell:allow-open",
    "scrape-tiktok-shop",
    "get-scraper-status",
    "stop-scraper",
    "search-products",
    "get-products",
    "get-product-by-id",
    "add-favorite",
    "remove-favorite",
    "get-favorites",
    "create-favorite-list",
    "get-favorite-lists",
    "delete-favorite-list",
    "generate-copy",
    "get-copy-history",
    "get-user-stats",
    "validate-license",
    "save-search-history",
    "get-search-history",
    "save-settings",
    "get-settings",
    "export-products",
    {
      "identifier": "fs:allow-app-read-recursive",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPCONFIG/**"
        },
        {
          "path": "$APPCACHE/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-write-recursive",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPCONFIG/**"
        },
        {
          "path": "$APPCACHE/**"
        }
      ]
    },
    {
      "identifier": "http:allow-fetch",
      "allow": [
        {
          "url": "http://localhost:8000/**"
        },
        {
          "url": "https://api.tiktrendfinder.com/**"
        }
      ]
    }
  ]
}